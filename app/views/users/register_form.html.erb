
<title>
	<%=@title=%>
   <%= stylesheet_link_tag 'home', :media => 'screen' %>
</title>
<h1>Edit your profile</h1>
<section role="main">
<%= form_tag do =%>
   <div>
      <%=label_tag(:first_name, "First name") =%>
      <%= text_field_tag(:first_name, "", :size=>"25") %>
   </div>   
   <div >
      <%=label_tag(:last_name, "Last name") =%>
      <%= text_field_tag(:last_name) %>
   </div>   
   <div class="email">
      <%=label_tag(:email, "E-mail") =%>
      <%= text_field_tag(:email) %>
   </div>   
   <div>
      <%=label_tag(:user_name, "Username/WorkFu URL") =%>
      <%= text_field_tag(:user_name) %>
   </div>
   
   <div>
      <%=label_tag(:personal_url, "Personal URL") =%>
      <%= text_field_tag(:personal_url) %>
   </div>
   
   <div>
      <%=label_tag(:location, "Location") =%>
      <%= text_field_tag(:location) %>
   </div>
   
   <div>
      <%=label_tag(:micro_bio, "Micro Bio") =%>
      <%= text_area_tag(:micro_bio) %>
   </div>
   
   <div>
      <%=label_tag(:proffessional_bio, "Proffessional Bio") =%>
      <%= text_area_tag "proffessional_bio", nil %>
   </div>
   
   <%= submit_tag("Update") %>
</section>
<% end %>
