
<title>
	<%=@title=%>
   <%= stylesheet_link_tag 'home', :media => 'screen' %>
</title>
<body>
   <div>
      <div class="description">
            <h1>Edit your profile</h1>
            <p>Use the form below to edit and manage your personal details.</p>
      </div>
   </div>
   <section role="main">
      <%= form_tag do =%>
         <div>
               <%=label_tag(:first_name, "First name") =%>
              <%= text_field_tag(:first_name) %>
         </div>   
   <div class="right lastname ">
      <%=label_tag(:last_name, "Last name") =%>
      <%= text_field_tag(:last_name) %>
   </div>   
   <div class="email">
      <%=label_tag(:email, "E-mail") =%>
      <%= text_field_tag(:email) %>
   </div>   
   <div class="right">
      <%=label_tag(:user_name, "Username/WorkFu URL") =%>
      <%= text_field_tag(:user_name) %>
   </div>
   
   <div>
      <%=label_tag(:personal_url, "Personal URL") =%>
      <%= text_field_tag(:personal_url) %>
   </div>
   
   <div class="right">
      <%=label_tag(:location, "Location") =%>
      <%= text_field_tag(:location) %>
   </div>
   
   <div class="microbiography">
      <span class="character-count">
         Used
         <span class="count">0</span>
         /
         <span class="total">160</span>
         characters. No HTML allowed.
      </span>
      <%=label_tag(:micro_bio, "Micro Bio") =%><span>(Achievements / Current position)</span>
      <%= text_area_tag(:micro_bio) %>
   </div>
   
   <div class="biography">
      <span class="character-count">
         Used
         <span class="count">3</span>
         /
         <span class="total">200</span>
         words. We allow
         <a title="View details" target="_blank" href="http://daringfireball.net/projects/markdown/syntax">Markdown</a>
         <span class="mdprev"> (edit for preview)</span>.
      </span>
      <%=label_tag(:proffessional_bio, "Proffessional Bio") =%>
      <%= text_area_tag "proffessional_bio", nil %>
   </div>
   
   <%= submit_tag("Update") %>
</section>
</body>
<% end %>
